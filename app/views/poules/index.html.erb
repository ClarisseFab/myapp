<h1><%= t '.pools'%></h1>
<br>
<table class="table table-bordered table-hover table-striped">
  <thead class="table-danger">
    <tr>
      <th scope="col"><%= t '.pool_name'%></th>
      <% @poules.first.equipes.each_with_index do |poule, index| %>
      <th scope="col"><%= t '.team'%> <%= index+1 %></th>
      <% end %> 
    </tr>
  </thead>
  <tbody>
    <% @poules.each do |poule| %>
      <tr>
        <th><%= poule.nom_poule %></th>
       <% poule.equipes.each do |equipe| %> 
        <th><%= equipe.nom_equipe %></th>
       <% end %> 
      </tr>
    <% end %> 
  </tbody>
</table>
<br>
<%= link_to t('.change_pools'), generate_poules_path, class:"btn btn-secondary" %>


